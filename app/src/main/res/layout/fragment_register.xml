<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/likeWhite"
    tools:context=".ui.activity.RegisterFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageVieww"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.6"
        android:src="@drawable/register"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-15dp"
        android:background="@color/registerbg2"
        android:elevation="8dp"
        android:layerType="none"
        android:outlineSpotShadowColor="@color/white"
        app:cardBackgroundColor="@color/bg2"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gifImageVieww">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <EditText
                android:id="@+id/registerconfirmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autofillHints=""
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:ems="10"
                android:fontFamily="@font/kanit_light"
                android:hint="***********"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textColorHint="@color/hinttext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="E-mail"
                android:textColor="@color/likeWhite"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/registerTextEmail"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="260dp"
                android:elevation="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="Password"
                android:textColor="@color/likeWhite"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerTextEmail" />

            <EditText
                android:id="@+id/registerTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autofillHints=""
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:ems="10"
                android:fontFamily="@font/kanit_light"
                android:hint="***********"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:textColorHint="@color/hinttext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="192dp"
                android:elevation="5dp"
                android:fontFamily="@font/kanit_light"
                android:text="Confirm Password"
                android:textColor="@color/likeWhite"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerTextPassword" />

            <Button
                android:id="@+id/registerBtn"
                style="@style/Theme.E_shopTest"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/bg2"
                android:elevation="14dp"
                android:fontFamily="@font/kanit_light"
                android:scrollbarSize="2dp"
                android:shadowColor="@color/bg"
                android:shadowRadius="10"
                android:text="@string/signup"
                android:textSize="18sp"
                app:cornerRadius="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerconfirmText"
                app:strokeColor="@color/bg"
                app:strokeWidth="2dp" />

            <EditText
                android:id="@+id/registerTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:autofillHints=""
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:ems="10"
                android:fontFamily="@font/kanit_light"
                android:hint="example@email.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/text"
                android:textColorHint="@color/hinttext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="15dp"
                android:fontFamily="@font/kanit_bold"
                android:shadowColor="@color/bg2"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Sign-Up"
                android:textColor="@color/likeWhite"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loginAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_light"
                android:shadowColor="@color/bg"
                android:shadowRadius="1.5"
                android:text="@string/haveu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Coded_by_bera"
                android:textColor="@color/likeWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registerBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
